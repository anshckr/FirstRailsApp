<% provide(:title, 'Index') %>
<div class= "container">
        <h1>Listing Users</h1>
        <table>
          <tr class="row">
            <th class = "col-md-3">Name</th>
            <th class = "col-md-3">Email</th>
          </tr>
         
        <% @users.each do |user| %>
          <tr class="row">
            <td class = "col-md-3"><%= user.name %></td>
            <td class = "col-md-3"><%= user.email %></td>
            <td class = "col-md-2"><%= link_to "Show", user %></td>
            <td class = "col-md-2"><%= link_to "Edit", edit_user_path(user) %></td>
            <td class = "col-md-2"><%= link_to "Remove", user, method: :delete, data: { confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>
        </table>
      </div>